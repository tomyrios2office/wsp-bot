# Configuración del Servidor
PORT=3000
HOST=0.0.0.0

# Configuración de N8N
N8N_WEBHOOK_URL=https://tu-n8n-instance.com/webhook/whatsapp

# Configuración de WhatsApp
WHATSAPP_SESSION_PATH=./sessions
WHATSAPP_CLIENT_ID=bot-client

# Configuración de Puppeteer (para Railway)
PUPPETEER_EXECUTABLE_PATH=/usr/bin/chromium-browser
PUPPETEER_SKIP_CHROMIUM_DOWNLOAD=true

# Configuración de Seguridad
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
MESSAGE_MAX_LENGTH=4096

# Configuración de Reconexión
RECONNECTION_MAX_ATTEMPTS=5
RECONNECTION_INTERVAL=30000

# Configuración de N8N
N8N_TIMEOUT=10000
N8N_RETRY_ATTEMPTS=3
N8N_RETRY_DELAY=5000

# Configuración Regional
COUNTRY_CODE=54

# Configuración de Logs
LOG_LEVEL=info

# Configuración de WhatsApp Web
PUPPETEER_HEADLESS=true
PUPPETEER_ARGS=--no-sandbox,--disable-setuid-sandbox,--disable-dev-shm-usage,--disable-accelerated-2d-canvas,--no-first-run,--no-zygote,--disable-gpu

# Configuración de Webhook
WEBHOOK_TIMEOUT=10000
WEBHOOK_RETRY_ATTEMPTS=3 